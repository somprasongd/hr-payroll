# {{PROJECT_NAME}} API - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================

APP_NAME={{PROJECT_NAME}}-api
HTTP_PORT=8080

# =============================================================================
# Database
# =============================================================================

# Format: postgres://user:password@host:port/dbname?sslmode=disable
DB_DSN=postgres://user:password@localhost:5432/{{PROJECT_NAME}}db?sslmode=disable

# Or use individual variables (for docker-compose)
DB_USER=user
DB_PASSWORD=password
DB_NAME={{PROJECT_NAME}}db

# =============================================================================
# JWT Secrets (GENERATE STRONG RANDOM STRINGS!)
# =============================================================================

# Minimum 32 characters recommended
JWT_ACCESS_SECRET=change-me-in-production-minimum-32-characters
JWT_REFRESH_SECRET=change-me-in-production-minimum-32-characters

# Token TTL
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h

# =============================================================================
# CORS
# =============================================================================

ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Optional: External Services
# =============================================================================

# Example: Redis for caching
# REDIS_URL=redis://localhost:6379/0

# Example: Email service
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=password
